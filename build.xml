<?xml version="1.0"?>
<project name="ij-plugins" default="run" basedir=".">
    <description>
        ij-plugins
    </description>

<!--
      @TODO: Readme files for the distribution.
      @TODO: Package the binary distribution.
    -->

    <property name="source.dir" location="."/>
    <property name="output.dir" location="output"/>
    <property name="dist.dir" location="dist"/>
    <property name="lib.dir" location="lib"/>
    <path id="toolkit.classpath">
        <pathelement location="${lib.dir}/ij.jar"/>
    </path>

    <property name="plugins.dir" location="${output.dir}/plugins"/>
    <path id="plugins.classpath">
        <path refid="toolkit.classpath"/>
        <pathelement location="${plugins.dir}/ij-plugins_toolkit.jar"/>
    </path>

    <!-- Customize properties, e.g., cvs.root.-->
    <property file="build.properties"/>

    <!-- Package name and version -->
    <property name="package.name" value="ij-plugins_toolkit"/>
    <property name="package.version" value="2.0"/>

    <!-- CVS setup -->
    <property name="cvs.root" value=":pserver:anonymous@cvs.sourceforge.net:/cvsroot/ij-plugins"/>
    <property name="cvs.module" value="ij-plugins"/>
    <property name="lib.dir" location="${basedir}/lib"/>
    <property name="license.file" location="../../License.txt"/>


    <!-- Location of common.xml -->
    <property name="common.xml.file" location="Plugins/common.xml"/>


    <!-- ==================== -->
    <!--  Load common target  -->
    <!-- ==================== -->
    <import file="${common.xml.file}"/>


</project>
